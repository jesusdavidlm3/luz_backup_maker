<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="backupMaker.MainWindow"
    Title="backupMaker"
>

    <StackPanel HorizontalAlignment="Center" Spacing="30">
        <Label HorizontalAlignment="Center" FontSize="40">Backup Maker</Label>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBlock VerticalAlignment="Center">Copiar desde: </TextBlock>
            <ComboBox SelectedIndex="0" VerticalAlignment="Center">
                <ComboBoxItem IsEnabled="False">Seleccione un origen</ComboBoxItem>  
                <ComboBoxItem>Disco local C</ComboBoxItem>  
            </ComboBox>
            <TextBlock VerticalAlignment="Center">a: </TextBlock>
            <ComboBox SelectedIndex="0">  
                <ComboBoxItem IsEnabled="False" VerticalAlignment="Center">Seleccione un destino</ComboBoxItem>  
                <ComboBoxItem>Disco Local C</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        
        <Button HorizontalAlignment="Center">Copiar</Button>
        <ProgressBar/>
    </StackPanel>

</Window>